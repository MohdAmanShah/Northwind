@rendermode RenderMode.InteractiveWebAssembly
@page "/deletecustomer/{customerid}"
@inject INorthwindService _service
@inject NavigationManager _nav

<h3>DeleteCustomer</h3>
<CustomerDetails ButtonStyle="danger" ButtonText="Delete Customer" OnValidSubmit="@Delete" customer="@customer" />

@code {
    [Parameter]
    public string CustomerId { get; set; } = null!;

    private EntityModels.Customer customer = new();

    protected override async Task OnParametersSetAsync()
    {
        customer = await _service.GetCustomerAsync(CustomerId);
    }

    private async Task Delete()
    {
        if (customer is not null)
        {
            await _service.DeleteCustomerAsync(CustomerId);
        }
        _nav.NavigateTo("customer");
    }
}
